@page "/bills"
@inject BillService BillService
@inject NavigationManager Nav

<h2>Bills</h2>

<button class="btn btn-primary me-2" @onclick="LoadBills">Refresh</button>
<button class="btn btn-success" @onclick="OpenModal">New Bill</button>

<table class="table table-striped table-hover mt-4">
    <thead>
        <tr>
            <th>ID</th>
            <th>Payee</th>
            <th>Due Date</th>
            <th>Amount</th>
            <th>Paid</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in BillList)
        {
            <tr>
                <td>@bill.Id</td>
                <td>@bill.PayeeName</td>
                <td>@bill.DueDate?.ToShortDateString()</td>
                <td>@bill.PaymentDue</td>
                <td>@(bill.Paid ? "Yes" : "No")</td>
                <td>
                    <button class="btn btn-sm btn-secondary me-2" @onclick="() => OpenEditModal(bill)">Edit</button>
                    <button class="btn btn-sm btn-danger" @onclick="() => OpenDeleteModal(bill)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ShowDeleteModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Delete Bill</h5>
                    <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                </div>

                <div class="modal-body">
                    <p>Are you sure you want to delete this bill?</p>

                    <ul>
                        <li><strong>Payee:</strong> @_deleteBill.PayeeName</li>
                        <li><strong>Amount:</strong> @_deleteBill.PaymentDue</li>
                        <li><strong>Due Date:</strong> @_deleteBill.DueDate?.ToShortDateString()</li>
                    </ul>

                    <p class="text-danger fw-bold">This action cannot be undone.</p>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmDelete">Delete</button>
                </div>

            </div>
        </div>
    </div>
}
