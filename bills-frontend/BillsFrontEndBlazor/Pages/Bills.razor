@page "/bills"
@inject BillService BillService
@inject NavigationManager Nav

<h2>Bills</h2>

<button class="btn btn-primary me-2" @onclick="LoadBills">Refresh</button>
<button class="btn btn-success" @onclick="OpenModal">New Bill</button>

<table class="table table-striped table-hover mt-4">
    <thead>
        <tr>
            <th>ID</th>
            <th>Payee</th>
            <th>Due Date</th>
            <th>Amount</th>
            <th>Paid</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in BillList)
        {
            <tr>
                <td>@bill.Id</td>
                <td>@bill.PayeeName</td>
                <td>@bill.DueDate?.ToShortDateString()</td>
                <td>@bill.PaymentDue</td>
                <td>@(bill.Paid ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>

@if (ShowCreateModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Create Bill</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>

                <div class="modal-body">

                    <div class="mb-3">
                        <label class="form-label">Payee Name</label>
                        <input class="form-control" @bind="_newBill.PayeeName" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Due Date</label>
                        <input type="date" class="form-control" @bind="_newBill.DueDate" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Amount</label>
                        <input type="number" class="form-control" @bind="_newBill.PaymentDue" />
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" @bind="_newBill.Paid" />
                        <label class="form-check-label">Paid</label>
                    </div>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-primary" @onclick="SaveNewBill">Save</button>
                </div>

            </div>
        </div>
    </div>
}
